{
  "connections": [
    {
      "port": 3000,
      "labels": ["api"]
    }
  ],
  "plugins": {
    "./db": {
        "select": ["api"],
        "debug": false,
        "connection": {
            "host": "localhost",
            "user": "workshop-user",
            "password": "workshop",
            "database": "workshop"
        }
    },
    "./errors": {
        "select": ["api"]
    },
    "./documentation": {
      "select": ["api"],
      "enable": true,
      "authorizations": {
        "default": {
          "type": "apiKey",
          "passAs": "header",
          "keyname": "Authorization"
        },
        "jwt": {
          "type": "apiKey",
          "passAs": "header",
          "keyname": "Authorization"
        }
      }
    },
    "./authenticate": {
      "select": ["api"],
      "jwtKey": "somesecret"
    },
    "./publish": {
      "select": ["api"]
    },
    "./test": {
      "select": ["api"]
    }
  }
}
